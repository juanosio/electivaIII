        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <!-- Up menu  -->
    <%- include('./partials/navbar.ejs') %>

    <!-- Side menu  -->
    <%- include('./partials/menu.ejs') %>


    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-md-6 col-8 align-self-center">
                    <h3 class="page-title mb-0 p-0">Nueva venta</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Compras</a>
                                </li>
                                <li
                                    class="breadcrumb-item active"
                                    aria-current="page"
                                >
                                    Ventas
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex">
                                <h4 class="card-title">Nueva venta</h4>
                                
                               
                            </div>

                            <form>
                                
                                <div class="form-group">
                                  <label for="exampleFormControlSelect1">Cliente</label>
                                  <select class="form-control" id="exampleFormControlSelect1">
                                      <option>1</option>
                                      <option>2</option>
                                      <option>3</option>
                                      <option>4</option>
                                      <option>5</option>
                                    </select>
                                </div>
                                
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect2">Tipo de Comprobante</label>
                                            <select class="form-control" id="exampleFormControlSelect2">
                                              <option>Boleta</option>
                                              <option>Factura</option>
                                              <option>Tarjeta</option>
                                            </select>
                                          </div>
                                    </div>
                                    <div class="col">
                                        <label for="exampleFormControlSelect1">Serie Comprobante</label>
                                        <input type="text" class="form-control" placeholder="Introduzca la serie del comprobante">
                                    </div>
                                    <div class="col">
                                        <label for="exampleFormControlSelect1">Nro Comprobante</label>
                                        <input type="text" class="form-control" placeholder="Introduzca el número de comprobante">
                                      </div>
                                  </div>

                                  <div class="row"> 
                                      <div class="col">
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect2">Artículo</label>
                                            <select class="form-control" id="exampleFormControlSelect2">
                                              <option>1</option>
                                              <option>2</option>
                                              <option>3</option>
                                              <option>4</option>
                                              <option>5</option>
                                            </select>
                                          </div>
                                      </div>

                                      <div class="col">
                                        <label for="exampleFormControlSelect1">Cantidad</label>
                                        <input type="text" class="form-control" placeholder="Cantidad de artículos">
                                      </div>

                                      <div class="col">
                                        <label for="exampleFormControlSelect1">Stock</label>
                                        <input type="text" class="form-control" placeholder="5">
                                      </div>

                                      <div class="col">
                                        <label for="exampleFormControlSelect1">Precio de Venta</label>
                                        <input type="text" class="form-control" placeholder="100">
                                      </div>

                                      <div class="col">
                                        <label for="exampleFormControlSelect1">Descuento</label>
                                        <input type="text" class="form-control" placeholder="Introduzca un descuento">
                                      </div>

                                  </div>
                                
                              
                              </form>
                            
                        </div>
                    </div>
                </div>
            </div>

