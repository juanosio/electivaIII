<%- include('../partials/header.ejs') %>

<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <!-- Up menu  -->
    <%- include('../partials/navbar.ejs') %>

    <!-- Side menu  -->
    <%- include('../partials/menu.ejs') %>


    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-md-6 col-8 align-self-center">
                    <h3 class="page-title mb-0 p-0">Listado de Ingresos</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/admin">Home</a>
                                </li>
                                
                                <li
                                    class="breadcrumb-item active"
                                    aria-current="page"
                                >
                                    Ingresos
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex">
                                <h4 class="card-title">Compras Realizadas</h4>
                                <a href="/ingresos/crear" class="btn btn-primary ml-auto" style="height: 35px; background: #26c6da; border: none">Nuevo</a>
                               
                            </div>
                            <%- include('../partials/messages.ejs') %>
                            <div class="table-responsive">
                                <table class="table user-table">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">Fecha</th>
                                            <th class="border-top-0">Proveedor</th>
                                            <th class="border-top-0">Comprobante</th>
                                            <th class="border-top-0">Impuesto</th>
                                            <th class="border-top-0">Total</th>
                                           
                                            <th class="border-top-0">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% ventas.map((venta, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= moment(venta.createdAt).format('DD MMM YYYY') %></td>
                                            <td><%= venta.supplier.name %></td>
                                            <td><%= venta.comprobanteType %></td>
                                            <td>18%</td>
                                            <td><%= venta.total %> Bs.</td>
                    
                                            <td>
                                                <a href="/ingresos/ver/<%= venta._id %>" >
                                                    <i class="mdi mr-2 mdi-eye"></i> <!-- mdi-file-pdf -->
                                                </a>
                                                
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('../partials/footer.ejs') %>
